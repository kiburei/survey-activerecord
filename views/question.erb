<p class="flow-text"><%= @question.question %></p>

<form  action="/questions/answers" method="post">
  <input type="hidden" name="id" id="id" value="<%= @question.id %>">
  <div class="input-field">
    <textarea name="answer" id="answer" class="materialize-textarea" placeholder="Answer"></textarea>
  </div>
  <div class="asnwer-btn">
    <button type="submit" class="btn">Submit</button>
  </div>
</form>

<% if @question.answers.any? %>
  <% @question.answers.each do |ans| %>
    <ul>
      <li><%= ans.answer %></li>
    </ul>
  <% end %>
<% end %>
